<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.planner.ui.PlannerController"
            prefWidth="1200" prefHeight="720">

    <!-- LEFT: Sidebar + Today classes list -->
    <left>
        <HBox>
            <!-- Narrow nav bar -->
            <VBox spacing="10" alignment="TOP_CENTER" style="-fx-background-color:#ececec;"
                  prefWidth="72" minWidth="72" maxWidth="72" BorderPane.alignment="CENTER">
                <padding><Insets top="16" right="8" bottom="16" left="8"/></padding>

                <!-- Avatar placeholder -->
                <Button text="" maxWidth="Infinity" prefHeight="72" focusTraversable="false">
                    <graphic>
                        <ImageView fitWidth="40" fitHeight="40">
                            <!-- you can set an image later in controller -->
                        </ImageView>
                    </graphic>
                </Button>

                <Separator/>

                <Button fx:id="listBtn"    text="list"    maxWidth="Infinity"/>
                <Button fx:id="matrixBtn"  text="matrix"  maxWidth="Infinity"/>
                <Button fx:id="calendarBtn" text="calendar" maxWidth="Infinity"/>

                <Pane VBox.vgrow="ALWAYS"/>
                <Button fx:id="helpBtn" text="help" maxWidth="Infinity"/>
            </VBox>

            <!-- Main left column -->
            <VBox spacing="12" style="-fx-background-color:transparent;" HBox.hgrow="ALWAYS" prefWidth="280" minWidth="260">
                <padding><Insets top="16" right="16" bottom="16" left="16"/></padding>

                <!-- Greeting & date -->
                <VBox spacing="2">
                    <Label fx:id="greetingLabel" text="Hi, [Name]" style="-fx-font-size:18px; -fx-font-weight:bold;"/>
                    <Label fx:id="dateLabel" text="Monday August 11 2025" style="-fx-font-size:14px;"/>
                </VBox>

                <!-- Add Task -->
                <HBox spacing="8">
                    <Button fx:id="addTaskBtn" text="+ Add Task" />
                    <TextField fx:id="quickTaskField" promptText="(optional) quick title..." HBox.hgrow="ALWAYS"/>
                </HBox>

                <!-- Today classes list (dynamic cards) -->
                <ScrollPane fitToWidth="true" VBox.vgrow="ALWAYS" prefViewportHeight="400">
                    <content>
                        <VBox fx:id="classListVBox" spacing="8" fillWidth="true">
                            <!-- dynamic class cards injected from controller -->
                        </VBox>
                    </content>
                </ScrollPane>
            </VBox>
        </HBox>
    </left>

    <!-- CENTER: Subject tasks & pending tasks -->
    <center>
        <VBox spacing="12" style="-fx-background-color:#f7f7f7;">
            <padding><Insets top="16" right="16" bottom="16" left="16"/></padding>

            <!-- Header -->
            <HBox alignment="CENTER_LEFT">
                <VBox HBox.hgrow="ALWAYS">
                    <Label fx:id="subjectTitleLabel" text="English" style="-fx-font-size:20px; -fx-font-weight:bold;"/>
                    <Label fx:id="periodInfoLabel" text="Period 3 10:20–12:15" style="-fx-font-size:12px; -fx-text-fill:#666;"/>
                </VBox>
                <Button fx:id="autoPlanBtn" text="Auto Planning"/>
            </HBox>

            <!-- Today task cards list -->
            <ScrollPane fitToWidth="true" VBox.vgrow="ALWAYS">
                <content>
                    <VBox fx:id="taskListVBox" spacing="10" fillWidth="true">
                        <!-- dynamic task cards injected from controller -->
                    </VBox>
                </content>
            </ScrollPane>

            <Separator/>

            <!-- Pending tasks section -->
            <Label text="Pending Tasks" style="-fx-font-size:16px; -fx-font-weight:bold;"/>
            <VBox>
                <ScrollPane fitToWidth="true" prefHeight="180">
                    <content>
                        <VBox fx:id="pendingListVBox" spacing="10" fillWidth="true">
                            <!-- dynamic pending task cards -->
                        </VBox>
                    </content>
                </ScrollPane>
            </VBox>
        </VBox>
    </center>

    <!-- RIGHT: Task detail panel -->
    <right>
        <BorderPane prefWidth="360" minWidth="320" style="-fx-background-color:white; -fx-border-color:#dddddd; -fx-border-width:0 0 0 1;">
            <padding><Insets top="16" right="16" bottom="16" left="16"/></padding>

            <!-- Detail header -->
            <top>
                <VBox spacing="8">
                    <HBox spacing="8" alignment="CENTER_LEFT">
                        <CheckBox fx:id="detailDoneCheck"/>
                        <Label fx:id="detailMetaLabel" text="Aug 11 2025 • Period 3 • English" style="-fx-text-fill:#666;"/>
                    </HBox>
                    <Label fx:id="detailTitleLabel" text="Anglophone culture presentation"
                           style="-fx-font-size:18px; -fx-font-weight:bold;"/>
                </VBox>
            </top>

            <!-- Detail body -->
            <center>
                <ScrollPane fitToWidth="true">
                    <content>
                        <VBox spacing="10" fillWidth="true">
                            <Label fx:id="detailBodyLabel" wrapText="true"
                                   text="Select a task to see details here. The long text will scroll."/>
                        </VBox>
                    </content>
                </ScrollPane>
            </center>

            <!-- Attachments -->
            <bottom>
                <VBox spacing="8">
                    <Label text="Attach File" style="-fx-font-weight:bold;"/>
                    <VBox fx:id="attachmentListVBox" spacing="6">
                        <!-- dynamic attachment rows -->
                    </VBox>
                    <Button fx:id="addAttachmentBtn" text="Choose file"/>
                </VBox>
            </bottom>
        </BorderPane>
    </right>

</BorderPane>
