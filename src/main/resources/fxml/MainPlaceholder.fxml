<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TitledPane?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="720" prefWidth="1200" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.planner.ui.PlannerController">

    <!-- LEFT: Sidebar + Today classes list -->
    <left>
        <HBox>
            <!-- Narrow nav bar -->
            <VBox alignment="TOP_CENTER" maxWidth="72" minWidth="72" prefWidth="72" spacing="10" style="-fx-background-color:#ececec;" BorderPane.alignment="CENTER">
                <padding><Insets bottom="16" left="8" right="8" top="16" /></padding>

                <!-- Avatar placeholder -->
                <Button focusTraversable="false" maxWidth="Infinity" prefHeight="72" text="">
                    <graphic>
                        <ImageView fitHeight="40" fitWidth="40">
                            <!-- you can set an image later in controller -->
                        </ImageView>
                    </graphic>
                </Button>

                <Separator />

                <Button fx:id="listBtn" maxWidth="Infinity" text="list" />
                <Button fx:id="matrixBtn" maxWidth="Infinity" text="matrix" />
                <Button fx:id="calendarBtn" maxWidth="Infinity" text="calendar" />

                <Pane VBox.vgrow="ALWAYS" />
                <Button fx:id="helpBtn" maxWidth="Infinity" text="help" />
            </VBox>

            <!-- Main left column -->
            <VBox minWidth="260" prefWidth="280" spacing="12" style="-fx-background-color:transparent;" HBox.hgrow="ALWAYS">
                <padding><Insets bottom="16" left="16" right="16" top="16" /></padding>

                <!-- Greeting & date -->
                <VBox spacing="2">
                    <Label fx:id="greetingLabel" style="-fx-font-size:18px; -fx-font-weight:bold;" text="Hi, [Name]" />
                    <Label fx:id="dateLabel" style="-fx-font-size:14px;" text="Monday August 11 2025" />
                </VBox>
            <VBox prefHeight="406.0" prefWidth="248.0">
               <children>
      
                      <!-- Add Task -->
                      <HBox prefHeight="288.0" prefWidth="248.0" spacing="8">
                     <children>
                        <VBox fx:id="dateBox" prefHeight="200.0" prefWidth="100.0">
                           <children>
                                   <Button fx:id="addTaskBtn" contentDisplay="CENTER" onAction="#addTask" prefHeight="26.0" prefWidth="115.0" text="+ Add Task">
                                 <VBox.margin>
                                    <Insets bottom="5.0" />
                                 </VBox.margin></Button>
                              <HBox prefHeight="100.0" prefWidth="200.0" />




                           </children>
                        </VBox>
                        <VBox prefHeight="200.0" prefWidth="146.0">
                           <children>
                                   <TextField fx:id="quickTaskField" promptText="(optional) quick title..." />
                              <TextArea fx:id="taskDescription" prefHeight="188.0" prefWidth="143.0">
                                 <VBox.margin>
                                    <Insets top="5.0" />
                                 </VBox.margin>
                              </TextArea>
                              <Label fx:id="selectedCourseDisplay" text="Label" />
                           </children>
                        </VBox>
                     </children>
                      </HBox>
                <TitledPane fx:id="selectedCourseTitle" animated="false" expanded="false" maxWidth="257.0" prefHeight="233.0" prefWidth="248.0" text="select course" wrapText="true">
                  <content>
                    <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                           <children>
                              <ScrollPane prefHeight="217.0" prefWidth="250.0">
                                 <content>
                                    <VBox fx:id="courseOption" />
                                 </content>
                              </ScrollPane>
                           </children>
                        </AnchorPane>
                  </content>
                     <padding>
                        <Insets top="5.0" />
                     </padding>
                </TitledPane>
               </children>
            </VBox>
            <HBox fx:id="filterHBox" prefHeight="30.0" prefWidth="248.0">
               <children>
                  <Button fx:id="inboxBtn" mnemonicParsing="false" onAction="#displayInbox" prefHeight="26.0" prefWidth="103.0" text="Inbox" />
               </children>
            </HBox>

                <!-- Today classes list (dynamic cards) -->
                <ScrollPane fitToWidth="true" prefHeight="231.0" prefViewportHeight="400" prefWidth="250.0" VBox.vgrow="ALWAYS">
                    <content>
                        <VBox fx:id="classListVBox" fillWidth="true">
                            <!-- dynamic class cards injected from controller -->
                        </VBox>
                    </content>
                </ScrollPane>
            </VBox>
        </HBox>
    </left>

    <!-- CENTER: Subject tasks & pending tasks -->
    <center>
        <VBox spacing="12" style="-fx-background-color:#f7f7f7;">
            <padding><Insets bottom="16" left="16" right="16" top="16" /></padding>

            <!-- Header -->
            <HBox alignment="CENTER_LEFT">
                <VBox HBox.hgrow="ALWAYS">
                    <Label fx:id="subjectTitleLabel" style="-fx-font-size:20px; -fx-font-weight:bold;" text="English" />
                    <Label fx:id="periodInfoLabel" style="-fx-font-size:12px; -fx-text-fill:#666;" text="Period 3 10:20â€“12:15" />
                </VBox>
                <Button fx:id="autoPlanBtn" text="Auto Planning" />
            </HBox>

            <!-- Today task cards list -->
            <ScrollPane fitToHeight="true" fitToWidth="true" maxHeight="400.0" prefHeight="400.0" prefWidth="347.0" VBox.vgrow="ALWAYS">
            <content>
               <VBox prefHeight="279.0" prefWidth="345.0">
                  <children>
                     <Label text="Today's Agenda" />
                     <VBox fx:id="todayTaskListVBox" fillWidth="true" />
                     <Label text="Future Agenda" />
                          <VBox fx:id="taskListVBox" fillWidth="true">
                        <!-- dynamic task cards injected from controller -->
                    </VBox>
                  </children>
               </VBox>
            </content>
            </ScrollPane>

            <Separator prefHeight="0.0" prefWidth="347.0" />

            <!-- Pending tasks section -->
            <Label style="-fx-font-size:16px; -fx-font-weight:bold;" text="Pending Tasks" />
            <VBox>
                <ScrollPane fitToWidth="true" prefHeight="234.0" prefWidth="347.0">
                    <content>
                        <VBox fx:id="pendingListVBox" fillWidth="true">
                            <!-- dynamic pending task cards -->
                        </VBox>
                    </content>
                </ScrollPane>
            </VBox>
         <Separator prefHeight="0.0" prefWidth="347.0" />
         <VBox>
            <children>
               <TitledPane animated="false" expanded="false" text="completed">
                 <content>
                   <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="370.0" prefWidth="345.0">
                        <children>
                           <ScrollPane fitToWidth="true" prefHeight="212.0" prefWidth="347.0">
                              <content>
                                 <VBox fx:id="completedTaskVBox" fillWidth="true" />
                              </content>
                           </ScrollPane>
                        </children>
                     </AnchorPane>
                 </content>
               </TitledPane>
            </children>
         </VBox>
        </VBox>
    </center>

    <!-- RIGHT: Task detail panel -->
    <right>
        <BorderPane minWidth="320" prefHeight="720.0" prefWidth="469.0" style="-fx-background-color:white; -fx-border-color:#dddddd; -fx-border-width:0 0 0 1;">
            <padding><Insets bottom="16" left="16" right="16" top="16" /></padding>

            <!-- Detail header -->
            <top>
                <VBox spacing="8">
                    <HBox alignment="CENTER_LEFT" spacing="8">
                        <CheckBox fx:id="detailDoneCheck" />
                        <Label fx:id="detailMetaLabel" style="-fx-text-fill:#666;" />
                    </HBox>
                    <Label fx:id="detailTitleLabel" style="-fx-font-size:18px; -fx-font-weight:bold;" />
                </VBox>
            </top>

            <!-- Detail body -->
            <center>
                <ScrollPane fitToWidth="true">
                    <content>
                        <VBox fx:id="detailPane" fillWidth="true" spacing="10" />
                    </content>
                </ScrollPane>
            </center>

            <!-- Attachments -->
            <bottom>
                <VBox spacing="8">
                    <Label style="-fx-font-weight:bold;" text="Attach File" />
                    <VBox fx:id="attachmentListVBox" spacing="6">
                        <!-- dynamic attachment rows -->
                    </VBox>
                    <Button fx:id="addAttachmentBtn" text="Choose file" />
                </VBox>
            </bottom>
        </BorderPane>
    </right>

</BorderPane>
