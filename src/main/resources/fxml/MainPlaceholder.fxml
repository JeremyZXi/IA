<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="720" prefWidth="1200" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.planner.ui.PlannerController">

    <!-- LEFT: Sidebar + Today classes list -->
    <left>
        <HBox>
            <!-- Narrow nav bar -->
            <VBox alignment="TOP_CENTER" maxWidth="72" minWidth="72" prefWidth="72" spacing="10" style="-fx-background-color:#ececec;" BorderPane.alignment="CENTER">
                <padding><Insets bottom="16" left="8" right="8" top="16" /></padding>

                <!-- Avatar placeholder -->
                <Button focusTraversable="false" maxWidth="Infinity" prefHeight="72" text="">
                    <graphic>
                        <ImageView fitHeight="40" fitWidth="40">
                            <!-- you can set an image later in controller -->
                        </ImageView>
                    </graphic>
                </Button>

                <Separator />

                <Button fx:id="listBtn" maxWidth="Infinity" text="list" />
                <Button fx:id="matrixBtn" maxWidth="Infinity" text="matrix" />
                <Button fx:id="calendarBtn" maxWidth="Infinity" text="calendar" />

                <Pane VBox.vgrow="ALWAYS" />
                <Button fx:id="helpBtn" maxWidth="Infinity" text="help" />
            </VBox>

            <!-- Main left column -->
            <VBox minWidth="260" prefWidth="280" spacing="12" style="-fx-background-color:transparent;" HBox.hgrow="ALWAYS">
                <padding><Insets bottom="16" left="16" right="16" top="16" /></padding>

                <!-- Greeting & date -->
                <VBox spacing="2">
                    <Label fx:id="greetingLabel" style="-fx-font-size:18px; -fx-font-weight:bold;" text="Hi, [Name]" />
                    <Label fx:id="dateLabel" style="-fx-font-size:14px;" text="Monday August 11 2025" />
                </VBox>
            <VBox prefHeight="406.0" prefWidth="248.0">
               <children>
      
                      <!-- Add Task -->
                      <HBox prefHeight="288.0" prefWidth="248.0" spacing="8">
                     <children>
                        <VBox prefHeight="200.0" prefWidth="100.0">
                           <children>
                                   <Button fx:id="addTaskBtn" contentDisplay="CENTER" onAction="#addPendingTask" prefHeight="26.0" prefWidth="99.0" text="+ Add Task" />
                              <DatePicker fx:id="picker">
                                 <VBox.margin>
                                    <Insets top="5.0" />
                                 </VBox.margin>
                              </DatePicker>
                                       <Label fx:id="letterDayLabel" />
                                       <Label fx:id="courseTodayLabel" />




                           </children>
                        </VBox>
                        <VBox prefHeight="200.0" prefWidth="146.0">
                           <children>
                                   <TextField fx:id="quickTaskField" promptText="(optional) quick title..." />
                              <TextArea fx:id="taskDescription" prefHeight="211.0" prefWidth="143.0">
                                 <VBox.margin>
                                    <Insets top="5.0" />
                                 </VBox.margin>
                              </TextArea>
                              <ScrollPane prefHeight="206.0" prefWidth="97.0">
                                 <VBox.margin>
                                    <Insets top="5.0" />
                                 </VBox.margin>
                              </ScrollPane>
                           </children>
                        </VBox>
                     </children>
                      </HBox>
               </children>
            </VBox>

                <!-- Today classes list (dynamic cards) -->
                <ScrollPane fitToWidth="true" prefHeight="397.0" prefViewportHeight="400" prefWidth="248.0" VBox.vgrow="ALWAYS">
                    <content>
                        <VBox fx:id="classListVBox" fillWidth="true" spacing="8">
                            <!-- dynamic class cards injected from controller -->
                        </VBox>
                    </content>
                </ScrollPane>
            </VBox>
        </HBox>
    </left>

    <!-- CENTER: Subject tasks & pending tasks -->
    <center>
        <VBox spacing="12" style="-fx-background-color:#f7f7f7;">
            <padding><Insets bottom="16" left="16" right="16" top="16" /></padding>

            <!-- Header -->
            <HBox alignment="CENTER_LEFT">
                <VBox HBox.hgrow="ALWAYS">
                    <Label fx:id="subjectTitleLabel" style="-fx-font-size:20px; -fx-font-weight:bold;" text="English" />
                    <Label fx:id="periodInfoLabel" style="-fx-font-size:12px; -fx-text-fill:#666;" text="Period 3 10:20–12:15" />
                </VBox>
                <Button fx:id="autoPlanBtn" text="Auto Planning" />
            </HBox>

            <!-- Today task cards list -->
            <ScrollPane fitToWidth="true" VBox.vgrow="ALWAYS">
                <content>
                    <VBox fx:id="taskListVBox" fillWidth="true" spacing="10">
                        <!-- dynamic task cards injected from controller -->
                    </VBox>
                </content>
            </ScrollPane>

            <Separator />

            <!-- Pending tasks section -->
            <Label style="-fx-font-size:16px; -fx-font-weight:bold;" text="Pending Tasks" />
            <VBox>
                <ScrollPane fitToWidth="true" prefHeight="180">
                    <content>
                        <VBox fx:id="pendingListVBox" fillWidth="true" spacing="10">
                            <!-- dynamic pending task cards -->
                        </VBox>
                    </content>
                </ScrollPane>
            </VBox>
        </VBox>
    </center>

    <!-- RIGHT: Task detail panel -->
    <right>
        <BorderPane minWidth="320" prefWidth="360" style="-fx-background-color:white; -fx-border-color:#dddddd; -fx-border-width:0 0 0 1;">
            <padding><Insets bottom="16" left="16" right="16" top="16" /></padding>

            <!-- Detail header -->
            <top>
                <VBox spacing="8">
                    <HBox alignment="CENTER_LEFT" spacing="8">
                        <CheckBox fx:id="detailDoneCheck" />
                        <Label fx:id="detailMetaLabel" style="-fx-text-fill:#666;" text="Aug 11 2025 • Period 3 • English" />
                    </HBox>
                    <Label fx:id="detailTitleLabel" style="-fx-font-size:18px; -fx-font-weight:bold;" text="Anglophone culture presentation" />
                </VBox>
            </top>

            <!-- Detail body -->
            <center>
                <ScrollPane fitToWidth="true">
                    <content>
                        <VBox fillWidth="true" spacing="10">
                            <Label fx:id="detailBodyLabel" text="Select a task to see details here. The long text will scroll." wrapText="true" />
                        </VBox>
                    </content>
                </ScrollPane>
            </center>

            <!-- Attachments -->
            <bottom>
                <VBox spacing="8">
                    <Label style="-fx-font-weight:bold;" text="Attach File" />
                    <VBox fx:id="attachmentListVBox" spacing="6">
                        <!-- dynamic attachment rows -->
                    </VBox>
                    <Button fx:id="addAttachmentBtn" text="Choose file" />
                </VBox>
            </bottom>
        </BorderPane>
    </right>

</BorderPane>
