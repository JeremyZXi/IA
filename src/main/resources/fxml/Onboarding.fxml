<?xml version="1.0" encoding="UTF-8"?>

<!-- src/main/resources/fxml/Onboarding.fxml -->

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<StackPane style="-fx-background-color: white;" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.planner.ui.OnboardingController">

    <!-- Screen 1: Name -->
    <AnchorPane fx:id="screenName" prefHeight="408.0" prefWidth="538.0" StackPane.alignment="CENTER">
        <children>
            <VBox spacing="16" AnchorPane.leftAnchor="60" AnchorPane.rightAnchor="60" AnchorPane.topAnchor="40">
                <Label style="-fx-font-size: 36px; -fx-font-weight: bold;" text="Welcome" />
                <Label style="-fx-font-size: 14px;" text="This quick setup configures your planner. You can change settings later." wrapText="true" />
                <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="What should we call you?" />
                <TextField fx:id="nameField" promptText="Enter your name" />
                <Button onAction="#goToSchedule" text="Continue" />
            </VBox>
        </children>
    </AnchorPane>

    <!-- Screen 2: Schedule -->
    <AnchorPane fx:id="screenSchedule" visible="false" StackPane.alignment="CENTER">
        <children>
            <VBox spacing="16" AnchorPane.bottomAnchor="40" AnchorPane.leftAnchor="60" AnchorPane.rightAnchor="60" AnchorPane.topAnchor="40">
                <Label style="-fx-font-size: 28px; -fx-font-weight: bold;" text="Schedule" />
                <Label style="-fx-font-size: 14px;" text="Enter the schedule your school uses" />
                <TextField fx:id="periodsPerDayField" promptText="number of period per day" />
                <TextField fx:id="daysPerCycleField" promptText="number of day per cycle" />
                <Separator />
                <ScrollPane fitToWidth="true" prefHeight="300">
                    <content>
                        <VBox fx:id="periodRows" spacing="12" />
                    </content>
                </ScrollPane>
                <HBox spacing="12">
                    <Button onAction="#backToName" text="Back" />
                    <Region HBox.hgrow="ALWAYS" />
                    <Button onAction="#finish" text="Continue" />
                </HBox>
            </VBox>
        </children>
    </AnchorPane>

</StackPane>
