<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<fx:root maxHeight="60.0" minHeight="60.0" minWidth="250.0" prefHeight="60.0" prefWidth="350.0" style="-fx-padding:6;" type="Button" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/23.0.1">
    <graphic>
        <HBox prefHeight="49.0" prefWidth="176.0" spacing="8" styleClass="pending-card">
            <children>
                <CheckBox fx:id="checkBox" />
                <VBox spacing="2">
                    <children>
                        <Label fx:id="titleLabel" style="-fx-font-weight:bold; -fx-font-size:13px;" />
                        <Label fx:id="metaLabel" style="-fx-text-fill:#3a6ea5; -fx-font-size:11px;" />
                        <Label fx:id="previewLabel" style="-fx-text-fill:#555; -fx-font-size:11px;" />
                    </children>
                </VBox>
                <Region prefHeight="50.0" prefWidth="200.0" HBox.hgrow="ALWAYS" />
            </children>
        </HBox>
    </graphic>
</fx:root>
